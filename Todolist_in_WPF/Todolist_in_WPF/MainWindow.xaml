<Window
    x:Class="Todolist_in_WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Todolist_in_WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Todolist"
    Width="380"
    Height="600"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Background>
        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Color="#FF1C1B1B" />
            <GradientStop Offset="1" Color="#FF1C1B1B" />
            <GradientStop Offset="0.498" Color="#FF333131" />
        </LinearGradientBrush>
    </Window.Background>
    <Window.Foreground>
        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Color="Black" />
            <GradientStop Offset="1" Color="White" />
            <GradientStop Offset="0.507" Color="#FF7D7D7D" />
            <GradientStop Offset="1" Color="#FFF2F2F2" />
            <GradientStop Offset="1" Color="White" />
            <GradientStop Offset="0.972" Color="#FF909090" />
        </LinearGradientBrush>
    </Window.Foreground>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  Заголовок  -->
            <RowDefinition Height="*" />
            <!--  Основная часть  -->
            <RowDefinition Height="Auto" />
            <!--  Панель задач  -->
            <RowDefinition Height="Auto" />
            <!--  Нижняя панель инструментов  -->
        </Grid.RowDefinitions>
        <Grid />
        <Grid
            x:Name="ToolBar"
            Grid.Row="0"
            MouseDown="ToolBar_MouseDown">
            <Polygon
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Fill="White"
                Opacity="0.3"
                Points="0,0,0,5,150,5,150,0" />

            <!--  Стак панель для органов управления  -->
            <StackPanel
                Width="Auto"
                Height="Auto"
                HorizontalAlignment="Right"
                Orientation="Horizontal">

                <!--  Свернуть  -->
                <Image
                    Name="MinButton"
                    Width="20"
                    Height="20"
                    Margin="1,0,1,1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    MouseDown="MinButton_MouseDown">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Source" Value="/Source/Свернуть-2.png" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Source" Value="/Source/Свернуть-1.png" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>

                <!--  Закрыть  -->
                <Image
                    x:Name="ExitButton"
                    Width="20"
                    Height="20"
                    Margin="1,0,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    MouseDown="ExitButton_MouseDown">
                    <Image.Style>
                        <Style TargetType="{x:Type Image}">
                            <Setter Property="Source" Value="/Source/Закрыть-2.png" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Source" Value="/Source/Закрыть-1.png" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
            </StackPanel>

            <!--  Стак панель для  классификации задач  -->
            <StackPanel
                Width="Auto"
                Height="Auto"
                Margin="1"
                Orientation="Horizontal">
                <!--  Все  -->
                <Image
                    Name="All"
                    Width="50"
                    Height="30"
                    Margin="1,0,1,1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Source" Value="/Source/Все-2.png" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Source" Value="/Source/Все-1.png" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>

                <!--  Работа  -->
                <Image
                    x:Name="Worck"
                    Width="50"
                    Height="30"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
                    <Image.Style>
                        <Style TargetType="{x:Type Image}">
                            <Setter Property="Source" Value="/Source/Работа-2.png" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Source" Value="/Source/Работа-1.png" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <ListView x:Name="TaskListView" MouseDoubleClick="TaskListView_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <GridViewColumn
                            Width="50"
                            DisplayMemberBinding="{Binding Id}"
                            Header="ID" />
                        <GridViewColumn
                            Width="100"
                            DisplayMemberBinding="{Binding Title}"
                            Header="Title" />
                        <GridViewColumn
                            Width="100"
                            DisplayMemberBinding="{Binding Description}"
                            Header="Description" />
                        <GridViewColumn Width="123" Header="Is Completed">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsCompleted, Mode=TwoWay}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <Grid Grid.Row="2">
            <DockPanel Background="#FF333131">
                <Button
                    x:Name="ShowTaskPanelButton"
                    Width="50"
                    Height="50"
                    Margin="5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    BorderThickness="10,1,1,1"
                    Click="ShowTaskPanelButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Image x:Name="PlusImage" Source="/Source/Плюс-2.png" />
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="PlusImage" Property="Source" Value="/Source/Плюс-1.png" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <StackPanel
                    x:Name="TaskPanel"
                    DockPanel.Dock="Bottom"
                    Orientation="Vertical"
                    Visibility="Hidden">
                    <ComboBox x:Name="TaskTitleComboBox" Margin="5">
                        <ComboBoxItem Content="Работа" />
                        <!--  Другие варианты  -->
                    </ComboBox>
                    <TextBox
                        x:Name="TaskTitleTextBox"
                        Margin="5"
                        Text="Введите название задачи" />
                    <TextBox
                        x:Name="TaskDescriptionTextBox"
                        Margin="5"
                        Text="Введите описание задачи" />
                    <Button
                        Margin="5"
                        Click="SaveTaskButton_Click"
                        Content="Сохранить задачу" />
                </StackPanel>
            </DockPanel>
        </Grid>

        <Grid Grid.Row="3">
            <Image
                x:Name="Tasks"
                Width="50"
                Height="50"
                Margin="-50,0,0,0"
                HorizontalAlignment="Center">
                <Image.Style>
                    <Style TargetType="{x:Type Image}">
                        <Setter Property="Source" Value="/Source/Задания-2.png" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Source" Value="/Source/Задания-1.png" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
            <Image
                x:Name="Calendar"
                Width="50"
                Height="50"
                Margin="50,0,0,0"
                HorizontalAlignment="Center">
                <Image.Style>
                    <Style TargetType="{x:Type Image}">
                        <Setter Property="Source" Value="/Source/Календарь-2.png" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Source" Value="/Source/Календарь-1.png" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
        </Grid>
    </Grid>
</Window>